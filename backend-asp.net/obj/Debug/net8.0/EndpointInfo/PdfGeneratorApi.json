{
  "openapi": "3.0.1",
  "info": {
    "title": "PdfGeneratorApi",
    "version": "1.0"
  },
  "paths": {
    "/api/Pdf/generate-leave-report": {
      "post": {
        "tags": [
          "Pdf"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LeaveReportData"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/LeaveReportData"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/LeaveReportData"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/WeatherForecast": {
      "get": {
        "tags": [
          "WeatherForecast"
        ],
        "operationId": "GetWeatherForecast",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WeatherForecast"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WeatherForecast"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WeatherForecast"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LeaveDetail": {
        "type": "object",
        "properties": {
          "employeeName": {
            "type": "string",
            "nullable": true
          },
          "startDate": {
            "type": "string",
            "format": "date-time"
          },
          "endDate": {
            "type": "string",
            "format": "date-time"
          },
          "status": {
            "type": "string",
            "nullable": true
          },
          "remark": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "LeaveReportData": {
        "type": "object",
        "properties": {
          "directorName": {
            "type": "string",
            "nullable": true
          },
          "totalApprovedLeaves": {
            "type": "integer",
            "format": "int32"
          },
          "totalPendingLeaves": {
            "type": "integer",
            "format": "int32"
          },
          "leaveDetails": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/LeaveDetail"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "WeatherForecast": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "temperatureC": {
            "type": "integer",
            "format": "int32"
          },
          "temperatureF": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "summary": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}